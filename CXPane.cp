// CXPane.cp#include <assert.h>#include "CXPane.h"CXPane::CXPane(LStream *inStream)	: LPane(inStream) {}const unsigned short maxColorVal = 65535;void CXPane::DrawSelf() {	Rect frame;	SDimension16 size;	RGBColor purple = { maxColorVal, 0, maxColorVal };	RGBColor green = { 0, maxColorVal, 0 };		CalcLocalFrameRect(frame);	GetFrameSize(size);		::PenNormal();	::RGBForeColor(&purple);	::FrameRect(&frame);	::RGBForeColor(&green);		::MoveTo(frame.left, frame.top + size.height / 2);	::Line(size.width - 1, 0);		::MoveTo(frame.left + size.width / 2, frame.top);	::Line(0, size.height - 1);		::MoveTo(frame.left, frame.top);	::Line(size.width - 1, size.height - 1);		::MoveTo(frame.right - 1, frame.top);	::Line(- (size.width - 1), size.height - 1);		::InsetRect(&frame, size.width / 4, size.height / 4);	PicHandle picture = ::GetPicture(128);	::DrawPicture(picture, &frame);	::ReleaseResource((Handle) picture);}void CXPane::ClickSelf(const SMouseDownEvent &inMouseDown) {	LPane *checkboxPane = FindPaneInMyWindow(200);	if (checkboxPane->GetValue() == 1) {		LPane *hcoordPane = FindPaneInMyWindow(100);		LPane *vcoordPane = FindPaneInMyWindow(101);		hcoordPane->SetValue(inMouseDown.whereLocal.h);		vcoordPane->SetValue(inMouseDown.whereLocal.v);	}}LPane* CXPane::FindPaneInMyWindow(PaneIDT inPaneID) {	LView *superView = GetSuperView();	LPane *foundPane;		while (superView->GetSuperView() != NULL) {		superView = superView->GetSuperView();	}	assert(superView != NULL);	foundPane = superView->FindPaneByID(inPaneID);	assert(foundPane != NULL);	return foundPane;}